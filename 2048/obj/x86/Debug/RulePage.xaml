<Page
    x:Class="_2048.RulePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:_2048"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <Page.BottomAppBar>
        <CommandBar>
        </CommandBar>
    </Page.BottomAppBar>
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="Assets/33.jpg" Stretch="UniformToFill"></ImageBrush>
        </Grid.Background>
        <Grid.RowDefinitions>
            <RowDefinition Height="100" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <TextBlock x:ConnectionId='1' x:Name="RuleText" Grid.Row="0" Text="游戏说明"  Margin="0,10,0,0" HorizontalAlignment="Center" VerticalAlignment="Center" Style="{StaticResource TextBlockStyle3}"/>
        <TextBlock x:ConnectionId='2' x:Name="RuleText_" Grid.Row="5"  Margin="30,20,0,0" Text="移动同方向相邻两个相同数字相加"  HorizontalAlignment="Left" VerticalAlignment="Center" Style="{StaticResource TextBlockStyle}"/>
        <Button x:ConnectionId='3' x:Name="start_button" Grid.Row="6" Content="开始游戏" Background="Gray" Height="45" Width="150" HorizontalAlignment="Center" VerticalAlignment="Top" Style="{StaticResource ButtonStyle}"                           />
    </Grid>
</Page>

